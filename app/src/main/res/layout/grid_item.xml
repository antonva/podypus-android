<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        card_view:cardPreventCornerOverlap="false">
        <!--android:layout_height="210dp"-->
        <!--app:cardElevation="@dimen/margin10"
        app:cardMaxElevation="@dimen/margin10"
        app:contentPadding="@dimen/margin10">-->
        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="16dp"
                android:text="boop"
                card_view:layout_constraintBottom_toTopOf="@+id/subscribeButton"
                card_view:layout_constraintTop_toBottomOf="@+id/iv"/>
            <Button
                android:id="@+id/subscribeButton"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="@string/subscribe"
                android:gravity="center"
                android:layout_gravity="end"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.497"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/tv"
                card_view:layout_constraintVertical_bias="0.087" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
